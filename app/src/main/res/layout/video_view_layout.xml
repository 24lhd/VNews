<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorBackgroudCard">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <fm.jiecao.jcvideoplayer_lib.JCVideoPlayerStandard
            android:id="@+id/video_view_videoplayer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_view_height_video" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/video_view_height_view_more"
            android:background="@drawable/card_video_shape"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroudCard"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />

            <ImageView
                android:id="@+id/video_view_im_add_playlist"
                android:layout_width="@dimen/video_view_height_view_more"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_playlist_add_blue_grey_400_24dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroudCard"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />

            <ImageView
                android:id="@+id/video_view_im_share"
                android:layout_width="@dimen/video_view_height_view_more"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:scaleType="center"
                android:src="@drawable/ic_share_blue_grey_400_24dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroudCard"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />

            <ImageView
                android:id="@+id/video_view_im_download"
                android:layout_width="@dimen/video_view_height_view_more"
                android:layout_height="match_parent"
                android:scaleType="center"
                android:src="@drawable/ic_cloud_download_blue_grey_400_24dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBackgroudCard"
                android:paddingBottom="2dp"
                android:paddingTop="2dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/native_ad_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</ScrollView>
